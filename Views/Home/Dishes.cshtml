@model List<Dish>


<div class="text-center">
    <h1 class="display-4">
        <a href="/">Chefs</a> |
        <a href="/dishes">Dishes</a>
    </h1>
    <p class="lead">Yum, take a look at our tasty dishes!</p>
    <a href="/newDish">Add A Dish</a>
    <hr>

    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Chef</th>
                <th scope="col">Tastiness</th>
                <th scope="col">Calories</th>

            </tr>
        </thead>
        <tbody>
            @foreach(var dish in Model)
                {
            <tr>
                    <td>@dish.dishName</td>
                    <td>@dish.Chef.firstName @dish.Chef.lastName</td>
                    <td>@dish.tastiness</td>
                    <td>@dish.calories</td>
                    <td>
                        <a asp-action="EditDish" asp-route-id="@dish.DishId">Edit Dish</a> |
                        <a asp-action="Delete" asp-route-id="@dish.DishId">Delete</a>   
                    </td>
            </tr>
                }
        </tbody>
    </table>

</div>
